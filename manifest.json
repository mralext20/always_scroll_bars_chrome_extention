{
  "name": "no scroll bars",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "created by Alexander Terry",
  "homepage_url": "http://github.com/mralext20/no_scroll_bars_chrome_extention",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    }
  ]
}